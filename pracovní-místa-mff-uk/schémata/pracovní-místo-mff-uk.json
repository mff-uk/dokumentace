{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://data.mff.cuni.cz/dokumentace/pracovní-místa-mff-uk/schémata/pracovní-místo-mff-uk.json",
	"name": "Pracovní místo na MFF UK",
	"description": "Pracovní místo na MFF UK",
	"required": ["typ", "iri"],
	"allOf": [{
		"$ref": "https://ofn.gov.cz/pracovní-místa/2021-09-23/schémata/pracovní-místo.json"
	}, {
		"properties": {
			"typ": {
				"type": "array",
				"contains": {
					"const": "Pracovní místo na MFF UK"
				}
			},
			"akademická_pozice": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\://data\\.mff\\.cuni\\.cz\/zdroj\/číselníky\/akademické-pozice\/položky\/.*$",
				"title": "Mzdová třída MFF UK",
				"examples": [
					"https://data.mff.cuni.cz/zdroj/číselníky/akademické-pozice/položky/OA"
				]
			},
			"expertíza": {
				"type": "array",
				"items": {
					"type": "object",
					"title": "Expertíza",
					"required": ["typ"],
					"allOf": [{
						"$ref": "https://ofn.gov.cz/věc/2020-07-01/schémata/věc.json"
					}, {
						"properties": {
							"typ": {
								"oneOf": [{
									"const": "Expertíza"
								}, {
									"type": "array",
									"contains": {
										"const": "Expertíza"
									},
									"items": {
										"type": "string"
									}
								}]
							}
						}
					}]
				}
			},
			"obor_frascati": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "iri",
					"pattern": "^https\\://data\\.mff\\.cuni\\.cz\/zdroj\/číselníky\/ford\/položky\/.*$",
					"title": "Obor Frascati (FORD)",
					"examples": [
						"https://data.mff.cuni.cz/zdroj/číselníky/ford/položky/10200"
					]	
				}
			},
			"obor_isvav": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "iri",
					"pattern": "^https\\://data\\.mff\\.cuni\\.cz\/zdroj\/číselníky\/klasifikace-výzkumných-oborů\/položky\/.*$",
					"title": "Obor ISVaV",
					"examples": [
						"https://data.mff.cuni.cz/zdroj/číselníky/klasifikace-výzkumných-oborů/položky/I"
					]	
				}
			},
			"mzdová_třída": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\://data\\.mff\\.cuni\\.cz\/zdroj\/číselníky\/mzdové-třídy\/položky\/.*$",
				"title": "Mzdová třída MFF UK",
				"examples": [
					"https://data.mff.cuni.cz/zdroj/číselníky/mzdové-třídy/položky/AP3"
				]
			},
			"sekce": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\://data\\.mff\\.cuni\\.cz\/zdroj\/číselníky\/sekce\/položky\/.*$",
				"title": "Sekce MFF UK",
				"examples": [
					"https://data.mff.cuni.cz/zdroj/číselníky/sekce/položky/informatika"
				]
			}
		}
	}]
}